# ========================================
# IHUTE BACKEND ENVIRONMENT CONFIGURATION
# ========================================

# DATABASE (Railway PostgreSQL will auto-fill this)
# Format: postgresql://username:password@host:5432/database
DATABASE_URL=postgresql://localhost:5432/ihute_db

# SERVER CONFIGURATION
PORT=3001
NODE_ENV=production

# CORS - Allowed origins (comma-separated, no spaces)
# Example: https://ihute.vercel.app,https://ihute-admin.vercel.app
ALLOWED_ORIGINS=https://ihute.vercel.app,http://localhost:3000

# JWT & SECURITY
JWT_SECRET=your-super-long-random-secret-key-change-this-in-production-12345678

# ========================================
# EMAIL CONFIGURATION (Optional)
# ========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=noreply@ihute.rw
EMAIL_PASS=your-email-app-password

# ========================================
# SMS CONFIGURATION (Optional)
# ========================================
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE=+250788000000

# ========================================
# PAYMENT PROVIDERS (Optional)
# ========================================
STRIPE_SECRET_KEY=sk_test_your_stripe_key
MOMO_API_KEY=your-momo-api-key
AIRTEL_API_KEY=your-airtel-api-key

# ========================================
# ADMIN CONFIGURATION
# ========================================
ADMIN_CODE_SECRET=admin-generator-secret-key

